<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="30dp"
    tools:context=".activity.status.SuratKeteranganUmrohActivity">

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Detail Data Jamaah"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/card_rekUmroh"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/txt_detail">

    <LinearLayout
        android:id="@+id/linear_berangkat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_detail"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="ID Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_idJamaah_ketUmrah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="Nama Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_namaJamaah_ketUmrah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Nama Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="NIP / NIK"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_nomorIndukJamaah_ketUmrah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NIP / NIK"
                android:textColor="#448AFF" />
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_ketMahram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_rekUmroh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Status Surat Keterangan Umrah"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/lineview2"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txt_ketMahram"
        android:background="#000000" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lineview2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Jadi"
            android:textSize="18dp"
            android:paddingBottom="10dp"
            android:id="@+id/txt_status_ketUmrah"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>