<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="30dp"
    tools:context=".activity.status.JadwalKeberangkatanActivity">

    <RelativeLayout
        android:id="@+id/relative_berangkat_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Detail Data Jamaah"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/card_infJadwalBerangkat"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/txt_detail">

        <LinearLayout
            android:id="@+id/linear_berangkat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_detail"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:paddingLeft="10dp"
                    android:text="ID Jamaah"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_idJamaah_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="ID Jamaah"
                    android:textColor="#448AFF" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:paddingLeft="10dp"
                    android:text="Nama Jamaah"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_namaJamaah_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Nama Jamaah"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:paddingLeft="10dp"
                    android:text="NIP / NIK"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_nomorIndukJamaah_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="NIP / NIK"
                    android:textColor="#448AFF" />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_berangkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_infJadwalBerangkat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Jadwal Keberangkatan Umroh"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:id="@+id/card_infJadwalBerangkat2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/txt_berangkat">

        <LinearLayout
            android:id="@+id/linear_berangkat_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_berangkat"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingLeft="10dp"
                    android:text="No. Penerbangan"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_noPenerbangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Nomor Penerbangan"
                    android:textColor="#448AFF" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingLeft="10dp"
                    android:text="Hari, Tanggal"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_hari_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Senin, 20 Oktober 2018"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingLeft="10dp"
                    android:text="Jam"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_jam_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="12:00"
                    android:textColor="#448AFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:paddingLeft="10dp"
                    android:text="Kloter"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/txt_kloter_berangkat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="Kloter"
                    android:textColor="#448AFF" />
            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txt_manasik_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_infJadwalBerangkat2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Download Itinerary"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200px"
            android:layout_height="200px"
            android:src="@drawable/pdficon"
            android:id="@+id/img_berangkat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/txt_manasik_4"/>

    </RelativeLayout>

</ScrollView>