<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="30dp"
    tools:context=".activity.status.JadwalManasikActivity">

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Detail Data Jamaah"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/card_infManasik"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_detail">

    <LinearLayout
        android:id="@+id/linear_berangkat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_detail"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="ID Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_idJamaah_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="ID Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="Nama Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_namaJamaah_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Nama Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="NIP / NIK"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_nomorIndukJamaah_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="NIP / NIK"
                android:textColor="#448AFF" />
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_berangkat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_infManasik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Jadwal Manasik Umroh"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/card_infJadwalManasik"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txt_berangkat">

    <LinearLayout
        android:id="@+id/linear_manasik_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_berangkat"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingLeft="10dp"
                android:text="Hari, Tanggal"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_hari_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Senin, 20 Oktober 2018"
                android:textColor="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingLeft="10dp"
                android:text="Jam"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_jam_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="12:00"
                android:textColor="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:paddingLeft="10dp"
                android:text="Tempat"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_tempat_manasik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:text="Tempat"
                android:textColor="#448AFF" />
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>