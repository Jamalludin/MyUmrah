<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.approval.BankApproval">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp">


        <android.support.v7.widget.CardView
            android:id="@+id/cardView_detail0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_detailBenda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Detail Data Jamaah"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineviewB"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/txt_detailBenda"
                    android:layout_marginTop="10dp"
                    android:background="#000000" />

                <LinearLayout
                    android:id="@+id/linearApp0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineviewB"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/linearView0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Tanggal Registrasi " />

                        <TextView
                            android:id="@+id/tglDftr_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Date" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="ID Jamaah" />

                        <TextView
                            android:id="@+id/id_jamaah_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="ID jamaah" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_bank_1"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Nama lengkap" />

                        <TextView
                            android:id="@+id/nama_lengkap_jamaah_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Nama Lengkap" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_bank_2"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="NIK" />

                        <TextView
                            android:id="@+id/nip_jamaah_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="NIP" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linear_bank_3"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="No. HP" />

                        <TextView
                            android:id="@+id/no_hp_jamaah_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Nomor HP" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Jenis Kelamin" />

                        <TextView
                            android:id="@+id/txt_jk_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="0" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Agen " />

                        <TextView
                            android:id="@+id/agen_bank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Agen" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_detail1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/cardView_detail0"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_paketDe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Paket Umroh"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineviewPB"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/txt_paketDe"
                    android:layout_marginTop="10dp"
                    android:background="#000000" />

                <LinearLayout
                    android:id="@+id/linearApp1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineviewPB"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/linearView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Paket Umroh " />

                        <TextView
                            android:id="@+id/txt_paketBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="paket" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Nilai Cicilan " />

                        <TextView
                            android:id="@+id/txt_cicilBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="cicilan" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Periode Cicilan" />

                        <TextView
                            android:id="@+id/txt_pcicilBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Berapa x" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Berangkat " />

                        <TextView
                            android:id="@+id/txt_berangkatBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Oktober" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardView_detail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView_detail1"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_setujuB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Persetujuan"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/lineviewSB"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/txt_setujuB"
                    android:layout_marginTop="10dp"
                    android:background="#000000" />

                <LinearLayout
                    android:id="@+id/linearApp2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lineviewSB"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <LinearLayout
                        android:id="@+id/linearView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Nomor Va" />

                        <TextView
                            android:id="@+id/txt_vaBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="00000000000" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Bank Payrol " />

                        <TextView
                            android:id="@+id/txt_aBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="Bank" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:text="Nomor Rekening " />

                        <TextView
                            android:id="@+id/txt_aRekBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.8"
                            android:paddingLeft="5dp"
                            android:text="0000000000" />

                    </LinearLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/layout_assmentBen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <EditText
                            android:id="@+id/input_assmentBank"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Hasil Assesment"
                            android:inputType="textMultiLine"
                            android:scrollbars="vertical"/>
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/linearApp3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView_detail2"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/tolak_jamaah_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Di Tolak" />

            <Button
                android:id="@+id/setuju_jamaah_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Di Setujui" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>