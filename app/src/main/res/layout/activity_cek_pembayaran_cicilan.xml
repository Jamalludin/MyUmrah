<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    tools:context=".activity.status.CekPembayaranCicilanActivity">

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Detail Data Jamaah"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_cekBayarCicilan"
        android:layout_width="match_parent"
        android:layout_below="@+id/txt_detail"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_berangkat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_detail"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="ID Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_idJamaah_cicilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="ID Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="Nama Jamaah"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_namaJamaah_cicilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Nama Jamaah"
                android:textColor="#448AFF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:paddingLeft="10dp"
                android:text="NIP / NIK"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_nomorIndukJamaah_cicilan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="NIP / NIK"
                android:textColor="#448AFF" />
        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txt_berangkat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView_cekBayarCicilan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Status Pembayaran Cicilan"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_status_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_berangkat"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <View
            android:id="@+id/lineview2"
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear_berangkat_1"
            android:background="#000000" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_status_1"
        android:id="@+id/lisView_cicilan"
        android:layout_marginTop="10dp">

    </ListView>

</RelativeLayout>